# Docker Hub Configuration
DOCKERHUB_USERNAME=jitendratech
API_IMAGE_TAG=latest
WEB_IMAGE_TAG=latest

# Database Configuration
DB_NAME=ehr_production
DB_USER=ehr_prod_user
DB_PASSWORD=CHANGE_ME_STRONG_DB_PASSWORD_MIN_32_CHARS
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# Keycloak Configuration
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_VERY_STRONG_ADMIN_PASSWORD_MIN_32_CHARS
KEYCLOAK_REALM=ehr-realm
KEYCLOAK_HOSTNAME=auth.nirmitee.io
KEYCLOAK_URL=https://auth.nirmitee.io

# Application URLs
NEXT_PUBLIC_API_URL=https://api.nirmitee.io
NEXT_PUBLIC_KEYCLOAK_URL=https://auth.nirmitee.io
NEXT_PUBLIC_KEYCLOAK_REALM=ehr-realm
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=ehr-web-client
ALLOWED_ORIGINS=https://ehr.nirmitee.io,https://app.nirmitee.io

# NextAuth Configuration
NEXTAUTH_URL=https://ehr.nirmitee.io
NEXTAUTH_SECRET=CHANGE_ME_CRYPTOGRAPHICALLY_SECURE_SECRET_MIN_32_CHARS

# JWT Configuration
JWT_SECRET=CHANGE_ME_CRYPTOGRAPHICALLY_SECURE_JWT_SECRET_MIN_32_CHARS

# External APIs
CLAIMMD_API_URL=https://api.claim.md/v1

# Environment
NODE_ENV=production

# Security & Performance
ENABLE_HTTPS=true
FORCE_HTTPS=true

