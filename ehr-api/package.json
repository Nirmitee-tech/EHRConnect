{
  "name": "ehr-api",
  "version": "1.0.0",
  "description": "EHR Backend API with PostgreSQL",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:setup": "node src/database/db-setup.js migrate",
    "db:setup:fresh": "node src/database/db-setup.js fresh",
    "db:seed": "node src/database/db-setup.js seed",
    "db:status": "node src/database/db-setup.js migrate:status",
    "db:rollback": "node src/database/db-setup.js migrate:undo",
    "db:reset": "node src/database/reset-db.js && node src/database/db-setup.js fresh",
    "db:help": "node src/database/db-setup.js help",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "migrate:status": "sequelize-cli db:migrate:status",
    "seed": "sequelize-cli db:seed:all",
    "seed:undo": "sequelize-cli db:seed:undo:all",
    "seed:billing": "node src/database/seed-scripts/run-billing-seed.js",
    "seed:providers": "node src/database/seed-scripts/run-providers-seed.js",
    "seed:roles": "node src/scripts/seed-default-roles.js",
    "seed:inventory": "node src/database/seed-scripts/seed-inventory-masters.js",
    "sync:permissions": "node src/scripts/sync-permissions-to-keycloak.js",
    "test": "jest"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "json-logic-js": "^2.0.5",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.9.0",
    "sequelize": "^6.37.7",
    "sequelize-cli": "^6.6.3",
    "socket.io": "^4.8.1",
    "twilio": "^5.10.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "ehr",
    "fhir",
    "healthcare",
    "api"
  ],
  "author": "EHR Connect Team",
  "license": "MIT"
}
